<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/configuration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Channel Info -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/channel_id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_channel_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/api_key">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_api_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>


        
        <!-- Field Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Field to Display"
            android:layout_marginTop="16dp"/>
            
        <Spinner
            android:id="@+id/spinner_field_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp" />

        <!-- Display Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display Options"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/cb_show_alarms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_alarms" />

        <CheckBox
            android:id="@+id/cb_show_schedules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_schedules" />

        <!-- Alarm Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Settings"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/upper_limit">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_upper_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/lower_limit">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_lower_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Days Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Days &amp; Times"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layout_days_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Each day row will follow this pattern -->
            <!-- We will generate these in code or define them here for simplicity and styling -->
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox android:id="@+id/cb_mon" android:text="Mon" android:layout_width="70dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_time_mon_start" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="08:00" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
                <Button android:id="@+id/btn_time_mon_end" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="18:00" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox android:id="@+id/cb_tue" android:text="Tue" android:layout_width="70dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_time_tue_start" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="08:00" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
                <Button android:id="@+id/btn_time_tue_end" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="18:00" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox android:id="@+id/cb_wed" android:text="Wed" android:layout_width="70dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_time_wed_start" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="08:00" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
                <Button android:id="@+id/btn_time_wed_end" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="18:00" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox android:id="@+id/cb_thu" android:text="Thu" android:layout_width="70dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_time_thu_start" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="08:00" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
                <Button android:id="@+id/btn_time_thu_end" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="18:00" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox android:id="@+id/cb_fri" android:text="Fri" android:layout_width="70dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_time_fri_start" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="08:00" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
                <Button android:id="@+id/btn_time_fri_end" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="18:00" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox android:id="@+id/cb_sat" android:text="Sat" android:layout_width="70dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_time_sat_start" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="08:00" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
                <Button android:id="@+id/btn_time_sat_end" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="18:00" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">
                <CheckBox android:id="@+id/cb_sun" android:text="Sun" android:layout_width="70dp" android:layout_height="wrap_content"/>
                <Button android:id="@+id/btn_time_sun_start" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="08:00" android:textSize="12sp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-"/>
                <Button android:id="@+id/btn_time_sun_end" style="?android:attr/borderlessButtonStyle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="18:00" android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Interval (seconds)"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_update_interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="900" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Graph Points Count"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_graph_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="20" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_test_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Test Alarm Sound"
            android:backgroundTint="#FF9800"/>

        <Button
            android:id="@+id/btn_save_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/save" />

    </LinearLayout>
</ScrollView>
